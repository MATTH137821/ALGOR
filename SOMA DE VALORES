
CONTADOR, S,MAIOR: INTEIRO
NUMERO, MENOR : INTEIRO

Inicio
CONTADOR <- 1
S <- 0

ENQUANTO (CONTADOR <=3) FACA
    ESCREVA ("UM NUMERO?")
    LEIA(NUMERO)
    SE( NUMERO > MAIOR) ENTAO
     MAIOR <- NUMERO
       FIMSE


   CONTADOR <- CONTADOR + 1
   S <- S + NUMERO

   FIMENQUANTO
   ESCREVAL ("O VALOR É", S)
   ESCREVAL ("O MAIOR NUMERO É" , MAIOR)

Fimalgoritmo
